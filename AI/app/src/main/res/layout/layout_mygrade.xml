<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sv_grade"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="345dp"
        android:orientation="vertical"
        android:background="@drawable/fenfen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日签到"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="368"
            android:layout_gravity="center"
            android:paddingTop="55dp"
            android:textColor="@android:color/white"
            android:textSize="60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="------------    "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="我的积分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="     ------------"/>

        </LinearLayout>

    </LinearLayout>
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <AbsoluteLayout
            android:layout_weight="1"
            android:layout_y="290dp"
            android:layout_x="15dp"
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:background="@drawable/shape">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="47dp"
                        android:src="@drawable/grade1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赚取积分"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="48dp"
                        android:src="@drawable/grade2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分规则"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="46dp"
                        android:src="@drawable/grade3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分兑换"/>

                </LinearLayout>

            </LinearLayout>

        </AbsoluteLayout>

    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_width="335dp"
        android:layout_height="match_parent"
        android:layout_y="390dp"
        android:layout_x="15dp"
        android:background="@drawable/shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <TextView
                    android:paddingTop="15dp"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分明细"/>

                <ListView
                    android:id="@+id/lv_grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>
            </LinearLayout>


    </AbsoluteLayout>

</AbsoluteLayout>
</ScrollView>
